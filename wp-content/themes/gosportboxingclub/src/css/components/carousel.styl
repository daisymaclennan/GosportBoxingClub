.carousel img
  object-fit cover

@media screen and (max-width: 1000px)
  .carousel
    margin-top 50px

  .carousel__slide-index
    font-size 24px

@media screen and (max-width: 800px)
  .carousel img
    width 100%
    height 75vw

@media screen and (min-width: 800px) and (max-width: 1500px)
  .carousel img
    width calc(100% - 20px)
    height 45vw
    max-height 500px
    margin-right 20px

@media screen and (min-width: 1000px)
  .carousel
    margin-top 150px
    grid-column-start 2
    grid-column-end 12

  .carousel__slide-index
    font-size 24px

@media screen and (min-width: 1500px)
  .carousel img
    width calc(100% - 30px)
    height 25vw
