footer
  background $darkRed
  color $white

footer img
  margin-left auto
  margin-right auto
  display block

footer a
  color $white

small
  font-weight lighter
  display block

@media screen and (max-width: 1000px)
  footer
    margin-left -16px
    margin-right -16px
    padding-top 30px
    padding-bottom 30px

    margin-top 100px

  footer img
    height 100px
    margin-bottom 60px

  footer > div
    margin-left 30px

  .footer__contact
    margin-bottom 45px

  footer p
    margin-bottom 15px

  .social-icons
    font-size 40px

  small
    margin-top 60px

@media screen and (min-width: 1000px)
  footer
    grid-column-start 1
    grid-column-end 13
    grid-row-start 100
    margin-left -30px
    margin-right -30px
    padding-top 120px
    padding-bottom 120px

    margin-top 300px

  footer img
    height 180px
    margin-bottom 150px

  footer > div
    margin-left calc(60px + calc(calc(100vw - 390px) / 12))



  .footer__contact
    margin-bottom 100px

  footer p
    margin-bottom 30px

  .social-icons
    font-size 80px
    width 180px
    display flex
    justify-content space-between

  small
    margin-top 200px
    font-size 24px
