.class
  background $white
  box-shadow 4px 4px 6px rgba(0, 0, 0, 0.05)
  display block
  color $black
  position relative

.class .ages
  text-align right

.class .ages__label
  opacity 0.5

.class .ages__value
  opacity 1
  font-weight bold

.class h2
  margin-bottom 0

.class img
  overflow hidden
  object-fit cover
  width 100%

@media screen and (min-width: 1000px)
  .classes
    margin-top 250px
    grid-column-start 2
    grid-column-end 12

  .class
    padding 30px
    margin-bottom 70px
    height 600px
    width 500px

    margin-right 50px

  .class h2
    margin-top 30px

  .class .link--right
    position absolute
    bottom 30px

@media screen and (min-width: 600px)
  .classes
    display flex
    flex-wrap wrap

  .class img
    height 350px

@media screen and (min-width: 600px) and (max-width: 1000px)
  .class
    height 475px
    margin-right 30px
    min-width 350px
    width 40vw

  .class .link--right
    position absolute
    bottom 20px


@media screen and (max-width: 1000px)
  .classes
    margin-top 40px

  .class
    padding-left 16px
    padding-right 16px
    padding-top 20px
    padding-bottom 20px
    margin-bottom 40px

  .class h2
    margin-top 20px

  .class .ages__label
    font-size 10px

  .class .ages__value
    font-size 18px
    margin-left 3px



@media screen and (max-width: 600px)
  .class
    margin-left -16px
    margin-right -16px
    padding-left 16px
    padding-right 16px
    padding-top 20px
    padding-bottom 20px

    margin-bottom 40px

  .class img
    width 100%
    height 75vw
    object-fit cover

  .class .link--right
    margin-top 40px
