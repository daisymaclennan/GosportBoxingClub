.coach-grid
  display grid
  width 100%

.coach-grid img
  width 100%

@media screen and (max-width: 1000px)
  .coach-grid
    grid-template-columns 1fr 1fr
    grid-column-gap 15px
    grid-row-gap 30px

  .coach-grid p
    margin-top 10px




@media screen and (min-width: 1000px)
  .coach-grid
    grid-column-start 2
    grid-column-end 12

    grid-template-columns 1fr 1fr 1fr
    grid-column-gap 5%
    grid-row-gap 80px



  .coach-grid p
    margin-top 25px
